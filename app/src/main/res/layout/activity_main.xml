<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/login_register_background"
    >


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@mipmap/register_icon_phone"
        android:drawablePadding="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_160"
        android:hint="手机号"
        android:textColorHint="#ffffff"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/edit_name"
        android:drawableLeft="@mipmap/register_icon_lock"
        android:drawablePadding="@dimen/dp_20"
        android:hint="登录密码"
        android:textColorHint="#ffffff"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"

        />
       <CheckBox
           android:id="@+id/check_remember"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/edit_pass"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_marginLeft="@dimen/dp_36"
           android:buttonTint="@color/white"
           />
        <ImageView
            android:id="@+id/image_pass_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_icon_eye"
            app:layout_constraintTop_toBottomOf="@id/edit_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_15"

            />
        <TextView
            android:id="@+id/text_rem_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_pass"
            app:layout_constraintLeft_toRightOf="@id/check_remember"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="记住密码"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"
            />
      <TextView
          android:id="@+id/tv_register"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="快速注册"
          android:textColor="#ffffff"
          android:textSize="@dimen/sp_14"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_marginRight="36dp"
          app:layout_constraintTop_toBottomOf="@id/edit_pass"
          app:layout_constraintRight_toRightOf="parent"
          />
      <Button
          android:id="@+id/btn_log"
          android:layout_width="@dimen/dp_280"
          android:layout_height="@dimen/dp_40"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginBottom="@dimen/dp_120"
          android:text="登录"
          android:background="@drawable/shape_btn"
          android:textColor="#ff5f71"
          />

</android.support.constraint.ConstraintLayout>