<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_151"
    android:layout_height="@dimen/dp_174"
    android:padding="@dimen/dp_10"
    android:layout_margin="@dimen/dp_5"
    android:id="@+id/rlayout_live"
    android:background="@drawable/rl_radius_shape"
    >

    <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/item_image_live"
    android:layout_width="@dimen/dp_131"
    android:layout_height="@dimen/dp_102"
    android:background="@mipmap/ic_launcher"
    />
    <TextView
        android:id="@+id/item_title_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_112"
        android:layout_centerHorizontal="true"
        android:lines="1"
        />
    <TextView
        android:id="@+id/item_price_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textColor="#ff0000"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_134"
        android:layout_centerHorizontal="true"
        android:lines="1"
        />
</RelativeLayout>