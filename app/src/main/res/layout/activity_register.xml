<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edit_rname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@mipmap/register_icon_phone"
        android:drawablePadding="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_180"
        android:hint="手机号"
        android:textColorHint="#ffffff"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/edit_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_rname"
        android:drawableLeft="@mipmap/register_icon_verification"
        android:drawablePadding="@dimen/dp_20"
        android:hint="验证码"
        android:textColorHint="#ffffff"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        />
    <EditText
        android:id="@+id/edit_rpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_verification"
        android:drawableLeft="@mipmap/register_icon_lock"
        android:drawablePadding="@dimen/dp_20"
        android:hint="登录密码"
        android:textColorHint="#ffffff"
        android:drawableRight="@mipmap/login_icon_eye"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账户？立即登陆"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/edit_rpass"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="36dp"
        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_125"
        android:text="注册"
        android:background="@drawable/shape_btn"
        android:textColor="#ff5f71"
        />
</android.support.constraint.ConstraintLayout>