<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/homepage_btn_menu"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/common_btn_menu"
            android:layout_marginLeft="@dimen/dp_24"
            />
        <EditText
            android:id="@+id/edit_search"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_50"
            />

        <ImageView
            android:id="@+id/homepage_btn_search"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@mipmap/common_nav_btn_search_n_dpi"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:clipChildren="false"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/home_binner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:clipChildren="false"
            ></android.support.v4.view.ViewPager>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_10"
       android:orientation="vertical"
       >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/bg_rxxp_syf"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热销新品"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#ff7f57"
            />
        <ImageView
            android:id="@+id/btn_newproduct"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_12"
            android:background="@mipmap/common_btn_more_yellow_n_dpi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_24"
            />

    </RelativeLayout>
  <android.support.v7.widget.RecyclerView
      android:id="@+id/recycler_newproduct"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dp_10"
      android:layout_marginLeft="@dimen/dp_24"
      android:layout_marginRight="@dimen/dp_24"

      >
  </android.support.v7.widget.RecyclerView>
   </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/bg_mlss_syf"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="魔力时尚"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#9933ff"
                    />
                <ImageView
                    android:id="@+id/btn_fashion"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:background="@mipmap/home_btn_more_purple_n_dpi"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_24"
                    />

            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_fashion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_60"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/bg_pzsh_syf"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品质生活"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ff6699"
                    />
                <ImageView
                    android:id="@+id/btn_live"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:background="@mipmap/home_btn_moer_pink_n_dpi"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_24"
                    />

            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


    </LinearLayout>


</ScrollView>


</LinearLayout>