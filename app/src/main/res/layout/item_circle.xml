<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="@dimen/dp_44"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/rl_radius_shape"
    >
  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/circle_headimage"
      android:layout_width="@dimen/dp_50"
      android:layout_height="@dimen/dp_50"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginTop="@dimen/dp_10"
      android:background="@mipmap/ic_launcher"
      />
    <TextView
        android:id="@+id/circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:text="111111"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/circle_headimage"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_25"
        />
    <TextView
        android:id="@+id/circle_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:text="111111111"
        android:textSize="@dimen/sp_10"
        android:textColor="#666666"
        />
    <TextView
        android:id="@+id/circle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/circle_headimage"
        android:padding="@dimen/dp_10"
        android:text="11111111111111111111111111111111111111111111111111111"
        />
      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/circle_image"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_140"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/circle_title"
          app:layout_constraintLeft_toLeftOf="parent"
          android:layout_marginRight="@dimen/dp_10"
          android:layout_marginLeft="@dimen/dp_10"
          />

      <ImageView
          android:id="@+id/circle_btn_like"
          android:layout_width="@dimen/dp_20"
          android:layout_height="@dimen/dp_20"
          android:background="@drawable/like_selector"
          app:layout_constraintTop_toBottomOf="@id/circle_image"
          app:layout_constraintRight_toLeftOf="@id/circle_likenum"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_marginRight="@dimen/dp_10"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginBottom="@dimen/dp_10"
          />
  <TextView
      android:id="@+id/circle_likenum"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="111"
      android:textSize="@dimen/sp_12"
      android:textColor="#666666"
      app:layout_constraintTop_toBottomOf="@id/circle_image"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginRight="@dimen/dp_24"
      android:layout_marginTop="@dimen/dp_20"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="@dimen/dp_10"

      />
</android.support.constraint.ConstraintLayout>